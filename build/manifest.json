{
  "name": "ATS",
  "version": "1.0",
  "description": "Auto Test Sprite 自动化测试录制工具",
  "devtools_page": "./devtools.html",
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "./content.js"
      ],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "./background.js"
    ],
    "persistent": false
  },
  "manifest_version": 2
}